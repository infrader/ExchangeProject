{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project (Make)",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && make -j4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Project from Scratch",
            "type": "shell",
            "command": "cd ${workspaceFolder} && rm -rf build && mkdir build && cd build && cmake .. && make -j4",
            "problemMatcher": ["$gcc"]
        }
    ]
}